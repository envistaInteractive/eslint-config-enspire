# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8

# No more "space" commits in git
trim_trailing_whitespace = true
insert_final_newline = true

# Treat all files with universal spaces for indenting
# and 4 space indents.
indent_style = space
indent_size = 4


[*.md]
trim_trailing_whitespace = false

